{{#colors}}
{{#normal}}
let s:black       = { "gui": "#{{black.hex}}",  "cterm": "{{black.number}}" }
let s:red         = { "gui": "#{{red.hex}}",    "cterm": "168" }
let s:green       = { "gui": "#{{green.hex}}",  "cterm": "144" }
let s:yellow      = { "gui": "#{{yellow.hex}}", "cterm": "180" }
let s:blue        = { "gui": "#{{blue.hex}}",   "cterm": "75"  }
let s:purple      = { "gui": "#{{magenta.hex}}", "cterm": "176" }
let s:cyan        = { "gui": "#{{cyan.hex}}",   "cterm": "73"  }
let s:white       = { "gui": "#{{white.hex}}",  "cterm": "{{white.number}}" }
{{/normal}}
{{/colors}}

let s:fg          = s:white
let s:bg          = s:black

let s:comment_fg  = { "gui": "#{{colors.bright.black.hex}}", "cterm": "{{colors.bright.black.hex}}" }
let s:gutter_bg   = { "gui": "#{{colors.normal.black.hex}}", "cterm": "{{colors.normal.black.number}}" }

let s:indicator   = { "gui": "#{{colors.bright.yellow.hex}}", "cterm": "{{colors.bright.yellow.number}}" }

" Darker than bright black to keep text sutble
let s:gutter_fg   = { "gui": "#303030", "cterm": "236" }

let s:vertsplit   = { "gui": "#181818", "cterm": "237" }
let s:cursor_line = { "gui": "#181818", "cterm": "237" }

let s:color_col   = { "gui": "#313640", "cterm": "237" }

let s:selection   = { "gui": "#{{selection.hex}}", "cterm": "239" }

function! s:h(group, fg, bg, attr)
  if type(a:fg) == type({})
    exec "hi " . a:group . " guifg=" . a:fg.gui . " ctermfg=" . a:fg.cterm
  else
    exec "hi " . a:group . " guifg=NONE cterm=NONE"
  endif
  if type(a:bg) == type({})
    exec "hi " . a:group . " guibg=" . a:bg.gui . " ctermbg=" . a:bg.cterm
  else
    exec "hi " . a:group . " guibg=NONE ctermbg=NONE"
  endif
  if a:attr != ""
    exec "hi " . a:group . " gui=" . a:attr . " cterm=" . a:attr
  else
    exec "hi " . a:group . " gui=NONE cterm=NONE"
  endif
endfun


